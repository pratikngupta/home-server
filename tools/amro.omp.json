{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#45F1C2",
          "style": "plain",
          "template": " {{ if eq .OS \"darwin\" }}\ue711{{ else }}\uf233{{ end }}",
          "type": "session"
        },
        {
          "foreground": "#0CA0D8",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full",
            "mapped_locations": {
              "~/home-server/compose/nvidia": "code/"
            }
          },
          "style": "plain",
          "template": " \uf07b {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#14A5AE",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },

    {
      "alignment": "right",
      "segments": [
        {
          "type": "docker",
          "style": "plain",
          "foreground": "#000000",
          "background": "#0B59E7",
          "template": "  {{ if ne .Context \"\" }}{{ .Context }}{{ end }} ",
          "properties": {
            "hide_if_default": true
          }
        },
        {
          "foreground": "#4adf00",
          "type": "python",
          "style": "plain",
          "template": " îˆµ {{ .Venv }} "
        },
        {
          "foreground": "#00dfb3",
          "type": "session",
          "style": "plain",
          "template": "{{ if .SSHSession }}ssh {{ .UserName }}@{{ .HostName }}{{ end }}"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#cd5e42",
          "style": "plain",
          "template": "\ue3bf ",
          "type": "root"
        },
        {
          "foreground": "#45F1C2",
          "style": "plain",
          "template": "-> ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}
